<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Registration">
   <Label fx:id="firstnameEmptyLabel" text="firstname is empty" textFill="red" visible="false"/>
   <TextField fx:id="firstnameField" maxWidth="150" promptText="firstname" />
   <Label fx:id="surnameEmptyLabel" text="surname is empty" textFill="red" visible="false"/>
   <TextField fx:id="surnameField" maxWidth="150" promptText="surname" />
   <Label fx:id="lastnameEmptyLabel" text ="lastname is empty" textFill="red" visible="false"/>
   <TextField fx:id="lastnameField" maxWidth="150" promptText="lastname" />
   <Label fx:id="usernameEmptyLabel" text="username is empty" textFill="red" visible="false"/>
   <TextField fx:id="usernameField" maxWidth="150" promptText="username" />
   <Label fx:id="passwordEmptyLabel" text="password is empty" textFill="red" visible="false"/>
   <PasswordField fx:id="passwordField" maxWidth="150" promptText="password" />
   <Button onAction="#onClickSignUpButton" text="sign up" defaultButton="true" />
   <HBox alignment="CENTER" spacing="8">
      <Label text="Already have an account?" />
      <Label onMouseClicked="#onClickSignInButton" text="Sign in" textFill="blue">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </HBox>
</VBox>
