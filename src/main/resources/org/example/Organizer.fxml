<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Organizer">
   <children>
      <VBox>
         <children>
              <Label onMouseClicked="#logOut" text="Log out" textFill="blue" />
         </children>
      </VBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                    <ImageView fx:id="userPhoto" fitHeight="150.0" fitWidth="150.0" />
                  <Button fx:id="myProfileButton" mnemonicParsing="false" onAction="#myProfile" text="Мой профиль" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                    <Label fx:id="greetingLabel" text="Доброе" />
                    <Label fx:id="nameLabel" text="Mr/Mrs Имя" />
                  <Button fx:id="eventsButton" mnemonicParsing="false" onAction="#events" text="Мероприятия" />
                  <Button fx:id="participantsButton" layoutX="10.0" layoutY="61.0" mnemonicParsing="false" onAction="#participants" text="Участники" />
                  <Button fx:id="juryButton" layoutX="10.0" layoutY="86.0" mnemonicParsing="false" onAction="#jury" text="Жюри" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
